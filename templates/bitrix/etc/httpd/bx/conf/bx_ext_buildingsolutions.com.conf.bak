# Ansible managed
# site: buildingsolutions.com
<VirtualHost 127.0.0.1:8887>
    ServerName  buildingsolutions.com
	ServerAlias www.buildingsolutions.com
    	ServerAdmin webmaster@localhost
	DocumentRoot  /home/bitrix/ext_www/buildingsolutions.com

	ErrorLog logs/buildingsolutions_error_log
	LogLevel warn
	CustomLog logs/buildingsolutions_access_log combined

	<IfModule mod_rewrite.c>
		#Nginx should have "proxy_set_header HTTPS YES;" in location
		RewriteEngine On
		RewriteCond %{HTTP:HTTPS} =YES
		RewriteRule .* - [E=HTTPS:on,L]
	</IfModule>

     
     

	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>

	<DirectoryMatch .*\.svn/.*>
        Require all denied
	</DirectoryMatch>

	<DirectoryMatch .*\.git/.*>
		 Require all denied
	</DirectoryMatch>

	<DirectoryMatch .*\.hg/.*>
		 Require all denied
	</DirectoryMatch>

	<Directory /home/bitrix/ext_www/buildingsolutions.com>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		DirectoryIndex index.php index.html index.htm

        Require all granted
        
        php_admin_value session.save_path /tmp/php_sessions/ext_www/buildingsolutions.com
        php_admin_value upload_tmp_dir    /tmp/php_upload/ext_www/buildingsolutions.com
	</Directory>

	<Directory /home/bitrix/ext_www/buildingsolutions.com/bitrix/cache>
		AllowOverride none
        Require all denied
	</Directory>

	<Directory /home/bitrix/ext_www/buildingsolutions.com/bitrix/managed_cache>
		AllowOverride none
        Require all denied
	</Directory>

	<Directory /home/bitrix/ext_www/buildingsolutions.com/bitrix/local_cache>
		AllowOverride none
        Require all denied
	</Directory>

	<Directory /home/bitrix/ext_www/buildingsolutions.com/bitrix/stack_cache>
		AllowOverride none
        Require all denied
	</Directory>

	<Directory /home/bitrix/ext_www/buildingsolutions.com/upload>
		AllowOverride none
		AddType text/plain php,php3,php4,php5,php6,phtml,pl,asp,aspx,cgi,dll,exe,ico,shtm,shtml,fcg,fcgi,fpl,asmx,pht
		php_value engine off
	</Directory>

	<Directory /home/bitrix/ext_www/buildingsolutions.com/upload/support/not_image>
		AllowOverride none
        Require all denied
	</Directory>

	<Directory /home/bitrix/ext_www/buildingsolutions.com/bitrix/images>
		AllowOverride none
		AddType text/plain php,php3,php4,php5,php6,phtml,pl,asp,aspx,cgi,dll,exe,ico,shtm,shtml,fcg,fcgi,fpl,asmx,pht
		php_value engine off
	</Directory>

	<Directory /home/bitrix/ext_www/buildingsolutions.com/bitrix/tmp>
		AllowOverride none
		AddType text/plain php,php3,php4,php5,php6,phtml,pl,asp,aspx,cgi,dll,exe,ico,shtm,shtml,fcg,fcgi,fpl,asmx,pht
		php_value engine off
	</Directory>

</VirtualHost>
