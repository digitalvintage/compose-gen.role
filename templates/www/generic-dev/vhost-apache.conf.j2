{% set sitename = item.sitename %}
server {
    set $root_path /var/www/wwwroot;
    index index.php index.html index.htm;
    disable_symlinks if_not_owner from=$root_path;
    access_log /var/www/log/nginx-access.log;
    error_log /var/www/log/nginx-error.log notice;
    ssi on;
    root $root_path;

    error_page   500 502 503 504  /50x.html;

    location = /50x.html {
        root   /usr/share/nginx/html;
    }
    location ~ /\.ht {
        access_log off;
        log_not_found off;
        deny all;
     }

    location / {
        index index.php index.html index.htm;
        proxy_redirect off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        client_max_body_size 100m;
        client_body_buffer_size 128k;
        proxy_connect_timeout 90;
        proxy_send_timeout 90;
        proxy_read_timeout 90;
        proxy_buffer_size 32k;
        proxy_buffers 32 32k;
        proxy_busy_buffers_size 64k;
        proxy_temp_file_write_size 64k;
        proxy_pass http://{{ sitename }}-apache:80;
    }

    location ~* \.(ogg|ogv|txt|svg|svgz|eot|otf|woff|woff2|mp4|ttf|rss|atom|css|js|jpg|jpeg|gif|png|ico|zip|tgz|gz|rar|bz2|doc|xls|exe|ppt|tar|mid|midi|wav|bmp|rtf|webm|less)$ {
        expires           360d;
    }

}

